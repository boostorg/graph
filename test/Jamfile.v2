#project : requirements < toolset> gcc < toolset> clang;

local pchs;

for
    local hpp in[glob - tree *.hpp]
    {
        cpp - pch $(hpp : B) : $(hpp) : < include > include;
        explicit $(hpp : B);
        pchs += $(hpp : B);
